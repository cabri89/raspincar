{% extends 'base.html.twig' %}

{% block body %}
    <h1>Utilisateur</h1>
    <table class="table table-condensed table-bordered table-hover">
        <thead>
            <tr>
                <th class="sm">ID</th>
                <th>Username</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="100%">
                        <p class="alert alert-warning">
                            Aucun utilisateur trouv√©.
                        </p>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
